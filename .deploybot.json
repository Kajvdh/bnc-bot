[
  {
    "name": "bot-deploy",
    "triggers": [
      "push"
    ],
    "branches": [
      "master"
    ],
    "remote-deploy": true,
    "deploy-path": "ircbots/bnc-bot",
    "servers": [
      "linuxdaemon-vps"
    ],
    "file-deploy": true,
    "script": [
      "[ -f .bncbot.pid ] && cat .bncbot.pid | xargs kill -SIGINT"
    ],
    "match_files": [
      "bncbot/*"
    ]
  },
  {
    "name": "update-deps",
    "triggers": [
      "push"
    ],
    "branches": [
      "master"
    ],
    "remote-deploy": true,
    "deploy-path": "ircbots/bnc-bot",
    "servers": [
      "linuxdaemon-vps"
    ],
    "file-deploy": true,
    "script": [
      "venv/bin/pip install -U -r requirements.txt",
      "[ -f .bncbot.pid ] && cat .bncbot.pid | xargs kill -SIGINT"
    ],
    "match_files": [
      "requirements.txt"
    ]
  }
]

